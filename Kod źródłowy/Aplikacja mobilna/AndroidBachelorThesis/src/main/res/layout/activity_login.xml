<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    android:gravity="center">


    <ProgressBar
        android:layout_column="0"
        android:layout_gravity="center"
        android:id="@+id/pb_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:layout_row="0"
        android:layout_columnSpan="2" />

    <pl.mbos.bachelor_thesis.custom.AwesomeText
        android:layout_column="0"
        android:layout_row="0"
        android:id="@+id/at_reason"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_row="1"
        android:layout_column="0"
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_field"
        android:layout_gravity="center|right" />

    <EditText
        android:id="@+id/et_login"
        android:layout_width="wrap_content"
        android:inputType="numberDecimal"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center_vertical|left"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView
        android:layout_column="0"
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_field"
        android:layout_gravity="center|right"
        android:layout_row="2" />

    <EditText
        android:layout_column="1"
        android:layout_row="2"
        android:id="@+id/et_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:password="true"
        android:layout_margin="16dp"
        android:layout_gravity="center_vertical|left" />

    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Webservice address:" />

    <EditText
        android:layout_row="4"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/et_webAddress"
        android:text="@string/webservice_base"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2" />

    <Button
        android:id="@+id/btn_login"
        android:layout_row="5"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/login_button"
        android:layout_columnSpan="2" />

</GridLayout>